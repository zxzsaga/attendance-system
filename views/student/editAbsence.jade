extend layout

append body
  .container
    .row
      .col-sm-3
        .panel.panel-default
          .panel-heading
            h3.panel-title
              | 申请
          .panel-body
            a(href='/student/newAbsence')
              | 申请假期
      .col-sm-6
        .panel.panel-default
          .panel-heading
            h3.panel-title #{ absence ? '修改申请' : '申请假期' }
          .panel-body
            form.form-horizontal(action=absence ? '/student/updateAbsence/#{absence.id}' : '/student/addAbsence', method='post', role='form')
              .form-group
                label.col-sm-3.control-label(for='startTime') 开始时间
                .col-sm-9
                  input.form-control#startTime(type='text', name='startTime', placeholder='2015-01-01 00:00', value = absence && absence.startTime)
              .form-group
                label.col-sm-3.control-label(for='endTime') 结束时间
                .col-sm-9
                  input.form-control#endTime(type='text', name='endTime', placeholder='2015-12-31 23:59', value = absence && absence.endTime)
              .form-group
                label.col-sm-3.control-label(for='reason') 原因
                .col-sm-9
                  textarea.form-control#reason(rows=5, name='reason') #{ absence && absence.reason }
              .form-group
                .col-sm-offset-3.col-sm-9
                  button(type="submit" class="btn btn-default") 确定
