extend layout

append body
  .container
    .row
      .col-sm-3
        .panel.panel-default
          .panel-heading
            h3.panel-title
              | 申请
          .panel-body
            a(href='/student/newAbsence')
              | 申请假期
      .col-sm-6
        .panel.panel-default
          .panel-heading
            h3.panel-title 申请假期
          .panel-body
            form.form-horizontal(action='/student/addAbsence', method='post', role='form')
              .form-group
                label.col-sm-3.control-label(for='startTime') 开始时间
                class.col-sm-9
                  input.form-control#startTime(type='text', name='startTime', placeholder='2015-01-01 00:00')
              .form-group
                label.col-sm-3.control-label(for='endTime') 结束时间
                .col-sm-9
                  input.form-control#endTime(type='text', name='endTime', placeholder='2015-12-31 23:59')
              .form-group
                label.col-sm-3.control-label(for='reason') 事由
                .col-sm-9
                  textarea.form-control#reason(rows=5, name='reason')
              .form-group
                .col-sm-offset-3.col-sm-9
                  button(type="submit" class="btn btn-default") 确定
