extend layout

append body
  .container
    .row
      .col-sm-3
        .panel.panel-default
          .panel-heading
            h3.panel-title 查询
          .panel-body
            a(href='/teacher') 请假查询
            hr
            a(href='/teacher/dailyAttendanceIndex') 签到查询
        .panel.panel-default
          .panel-heading
            h3.panel-title 个人信息
          .panel-body
            p 姓名: #{ user.name }
            p 性别: #{ user.gender === 'female' ? '女' : '男' }
            p 工号: #{ user.id }

      .col-sm-9
        .panel.panel-default
          .panel-heading
            h3.panel-title 添加学生
          .panel-body
            form.form-horizontal(action='/teacher/addStudent', method='post', role='form')
              .form-group
                label.col-sm-2.control-label(for='id') 学号
                .col-sm-6
                  input.form-control#id(name='id', type='text', placeholder='学号')
              .form-group
                label.col-sm-2.control-label(for='usr') 姓名
                .col-sm-6
                  input.form-control#usr(name='name', type='text', placeholder='姓名')
              .form-group
                label.col-sm-2.control-label(for='gender') 性别
                .col-sm-6
                  select.form-control#gender(name='gender')
                    option(value='male') 男
                    option(value='female') 女
              .form-group
                label.col-sm-2.control-label(for='pwd') 密码
                .col-sm-6
                  input.form-control#pwd(name='pwd', type='password', placeholder='密码')
              .form-group
                .col-sm-offset-2.col-sm-6
                  button(type="submit" class="btn btn-default") 确定
