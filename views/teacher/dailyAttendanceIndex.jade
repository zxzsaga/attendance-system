extend layout

append body
  .container
    .row
      .col-sm-3
        .panel.panel-default
          .panel-heading
            h3.panel-title 查询
          .panel-body
            a(href='/teacher') 请假查询
            hr
            a(href='/teacher/dailyAttendanceIndex') 签到查询
        .panel.panel-default
          .panel-heading
            h3.panel-title 个人信息
          .panel-body
            p 姓名: #{ user.name }
            p 性别: #{ user.gender === 'female' ? '女' : '男' }
            p 工号: #{ user.id }

      .col-sm-9
        .panel.panel-default
          .panel-heading
            h3.panel-title 签到查询
          .panel-body
            form.form-horizontal(action='/teacher/findDailyAttendance', method='post', role='form')
              .form-group
                label.col-sm-2.control-label(for='date') 日期
                .col-sm-6
                  input.form-control#date(type='text', name='date', placeholder='20150101', value=date)
              .form-group
                .col-sm-offset-2.col-sm-6
                  button(type="submit" class="btn btn-default") 确定
          br
          if (uncheckedList)
            table.table
              tr
                th 未签到学生
              tr
                th 学号
                th 姓名
                th 性别
              each uncheched in uncheckedList
                tr
                  td #{ uncheched._id }
                  td #{ uncheched.name }
                  td #{ uncheched.gender === 'female' ? '女' : '男' }
          br
          if (checkedList)
            table.table
              tr
                th 已签到学生
              tr
                th 学号
                th 姓名
                th 性别
              each cheched in checkedList
                tr
                  td #{ cheched._id }
                  td #{ cheched.name }
                  td #{ cheched.gender === 'female' ? '女' : '男' }
